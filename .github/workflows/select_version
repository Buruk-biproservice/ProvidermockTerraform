# This is a basic workflow to help you get started with Actions

name: 'Select Converter 2'

# Controls when the workflow will run
on:
  workflow_dispatch:
  inputs:
    name:
    description:'Select Converter Version'
    default: '1.9.51-26a87b8'
    required: true

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  copy:
    name: 'Deploy Converter 2'
    runs-on: ubuntu-latest
  
    steps:
      - uses: actions/checkout@v3
      - uses: hashicorp/setup-terraform@v2
         
      - name: Login via Az module
        uses: azure/login@v1
        with:
          creds: '${{secrets.AZURE_CREDENTIALS}}'
      # Converter App wird gel√∂scht   
      - name: Deploy Converter from container apps
        uses: azure/CLI@v1
        with:
         inlineScript: |
          # This command assumes you have logged in with az login
          az containerapp create -n biproconverter2 -g providermock \
          --image containerregistrybipro.azurecr.io/biproconnect-430-converter:${{ github.event.inputs.name }} --environment providermock-app-env \
          --ingress external --target-port 8081 \
          --registry-server ${{secrets.REGISTRY_SERVER}} --registry-username ${{secrets.REGISTRY_USERNAME}} --registry-password ${{secrets.REGISTRY_PASSWORD}} \
          --query properties.configuration.ingress.fqdn \
          --min-replicas 1 --max-replicas 1
